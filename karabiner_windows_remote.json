{
    "title": "Microsoft Remote Desktop",
    "rules": [
        {
            "description": "Windows Mappings - Microsoft Remote Desktop",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command"
                    },
                    "to": [{
                        "key_code": "left_option"
                    }],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "com\\.microsoft\\.rdc\\.macos"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_option"
                    },
                    "to": [{
                        "key_code": "left_gui"
                    }],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "com\\.microsoft\\.rdc\\.macos"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
